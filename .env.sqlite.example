# --- Laravel .env (SQLite-first, Windows/XAMPP) ---
APP_NAME=SocialSuite
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://socialsuite.local
# or: APP_URL=http://localhost/socialsuite/public

LOG_CHANNEL=stack

# ===== Database (SQLite) =====
DB_CONNECTION=sqlite
# Absolute path is safest on Windows. Replace the path with your real one if different.
DB_DATABASE=D:\xampp\htdocs\socialsuite\database\database.sqlite
DB_FOREIGN_KEYS=true

# ===== Queue =====
# For SQLite dev, using 'sync' avoids write-locks. Switch to 'database' or 'redis' later.
QUEUE_CONNECTION=sync
# If you want database queue with SQLite, run:
#   php artisan queue:table && php artisan migrate
# And then set:
# QUEUE_CONNECTION=database

# ===== Meta / Facebook =====
META_APP_ID=YOUR_APP_ID
META_APP_SECRET=YOUR_APP_SECRET
META_VERIFY_TOKEN=dev-verify-token
META_WEBHOOK_SECRET=dev-webhook-secret
META_GRAPH_VERSION=v24.0